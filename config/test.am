#### Makefile hooks for post-installation tests

include $(top_srcdir)/config/common.am
SUFFIXES                      = .at
AUTOTEST                      = autom4te --language=autotest
CHECK_TESTS                   =
INSTALLCHECK_TESTS            =
CHECK_PROGS                   =
INSTALLCHECK_PROGS            =

CHECKTESTSUITE                = check_testsuite
INSTALLCHECKTESTSUITE         = installcheck_testsuite

EXTRA_DIST                    = $(srcdir)/check_testsuite.at
EXTRA_DIST                   += $(srcdir)/installcheck_testsuite.at
EXTRA_DIST                   += $(CHECK_TESTS)
EXTRA_DIST                   += $(INSTALLCHECK_TESTS)
EXTRA_DIST                   += atconfig.in

CLEANFILES                   += $(CHECKTESTSUITE)
CLEANFILES                   += $(INSTALLCHECKTESTSUITE)
DISTCLEANFILES                = atconfig

$(CHECKTESTSUITE)             : $(srcdir)/check_testsuite.at
$(CHECKTESTSUITE)             : $(top_builddir)/m4/package.m4
$(CHECKTESTSUITE)             : $(CHECK_TESTS)

$(INSTALLCHECKTESTSUITE)      : $(srcdir)/installcheck_testsuite.at
$(INSTALLCHECKTESTSUITE)      : $(top_builddir)/m4/package.m4
$(INSTALLCHECKTESTSUITE)      : $(INSTALLCHECK_TESTS)

.at:
	$(AUTOTEST) -I $(top_srcdir)/m4 -I $(top_builddir)/m4 -I $(srcdir) $< -o $@.tmp
	mv $@.tmp $@

subdir = test

atconfig: $(top_builddir)/config.status
	cd $(top_builddir) && \
	$(SHELL) ./config.status $(subdir)/$@

check-local: atconfig atlocal $(CHECKTESTSUITE)
	@echo "*** INFO: run 'make check CHECKTESTSUITE_FLAGS=list_of_test_numbers' if you want to replay some tests"
	$(SHELL) $(CHECKTESTSUITE) $(CHECK_TESTS_ENVIRONMENT) $(CHECKTESTSUITE_FLAGS)

installcheck-local:
	$(MAKE) installcheck-cplusplus

installcheck-cplusplus: atconfig atlocal $(INSTALLCHECKTESTSUITE)
	@echo "*** INFO: run 'make installcheck INSTALLCHECKTESTSUITE_FLAGS=list_of_test_numbers' if you want to replay some tests"
	$(SHELL) $(INSTALLCHECKTESTSUITE) $(INSTALLCHECK_TESTS_ENVIRONMENT) $(INSTALLCHECKTESTSUITE_FLAGS)


clean-local:
	rm -rf *.dir
